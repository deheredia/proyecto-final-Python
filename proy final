CREATE TABLE "Datos_Usuarios" (
	"Id_Datos"	INTEGER NOT NULL UNIQUE,
	"Id_Usuario"	INTEGER NOT NULL UNIQUE,
	"Nombre"	TEXT(50) NOT NULL,
	"Apellido"	TEXT(25) NOT NULL,
	"Id_Direccion"	INTEGER NOT NULL UNIQUE,
	"Edad"	INTEGER,
	"DNI"	INTEGER,
	PRIMARY KEY("Id_Datos" AUTOINCREMENT)
)

CREATE TABLE "Direccion_Usuario" (
	"Id_Direccion"	INTEGER NOT NULL UNIQUE,
	"Calle"	TEXT(50) NOT NULL,
	"Numero"	INTEGER NOT NULL,
	"Barrio"	TEXT(50),
	"Ciudad"	TEXT(50) NOT NULL,
	"Provincia"	TEXT(25) NOT NULL,
	"Pais"	TEXT(25) NOT NULL,
	PRIMARY KEY("Id_Direccion" AUTOINCREMENT)
)

CREATE TABLE "Productos" (
	"Id_Productos"	INTEGER NOT NULL UNIQUE,
	"Id_Usuario"	INTEGER NOT NULL UNIQUE,
	"Descripcion"	TEXT NOT NULL,
	"Entradas"	INTEGER,
	"Salidas"	INTEGER,
	"Stock"	INTEGER,
	"Precio"	REAL NOT NULL,
	PRIMARY KEY("Id_Productos" AUTOINCREMENT)
)

CREATE TABLE "Usuarios" (
	"Id_Usuario"	INTEGER NOT NULL,
	"Nombre_Usuario"	TEXT(50) NOT NULL UNIQUE,
	"Mail"	TEXT(50) NOT NULL UNIQUE,
	"Es_Activo"	INTEGER NOT NULL DEFAULT 1,
	PRIMARY KEY("Id_Usuario" AUTOINCREMENT)
)

CREATE TABLE "Ventas" (
	"Id_ventas"	INTEGER NOT NULL UNIQUE,
	"Id_productos"	INTEGER NOT NULL UNIQUE,
	"Fecha"	INTEGER NOT NULL,
	"Codigo_producto"	INTEGER NOT NULL,
	"Cantidad_vendidas"	INTEGER,
	PRIMARY KEY("Id_Ventas" AUTOINCREMENT)
)